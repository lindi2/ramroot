#!/bin/bash
set -e
set -x
export LC_ALL=C

if [ -d fs ]; then sudo rm -fr fs; fi
mkdir -p fs/snapshot/0
sudo debootstrap etch fs/snapshot/0 http://apt-proxy.kurp.hut.fi:9999/debian || true
sudo chroot fs/snapshot/0 apt-get -y remove apt-utils aptitude bsdmainutils cpio cron dmidecode dselect ed groff-base info iptables iputils-ping klogd laptop-detect libconsole libdb4.4 libgdbm3 liblocale-gettext-perl libncursesw5 libnewt0.52 libpopt0 libsasl2 libtext-charwidth-perl libtext-iconv-perl libtext-wrapi18n-perl logrotate man-db manpages nano netbase netcat openbsd-inetd procps sysklogd tasksel tasksel-data tcpd traceroute update-inetd vim-common vim-tiny wget whiptail
sudo chroot fs/snapshot/0 apt-get --force-yes -y install debconf-english libedit2 libkrb53 openssh-client openssh-server linux-image-2.6.18-5-486 grub
# TODO: reply No No automatically
